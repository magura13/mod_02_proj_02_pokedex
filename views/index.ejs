<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Pokedéx</title>
  </head>
  <body>
    <header>
      <h1>POKEDÉX</h1>
    </header>

    <main>

      <section id="cadastro">
        <% if (pokemon == undefined) { %>
        <h2>Cadastre um novo Pokemon</h2>

        <form action="/create" method="post">
          <label for="nome">Nome:</label>
          <input type="text" id="nome" name="nome" />

          <label for="descricao">Descrição:</label>
          <input type="text" name="descricao" id="descricao" />

          <label for="tipo">Tipo:</label>
          <input type="text" name="tipo" id="tipo" />

          <label for="imagem">Link da Imagem:</label>
          <input type="text" name="imagem" id="imagem" />

          <button id="btnCadastrar" type="submit">Cadastrar</button>
        </form>

        <% }else { %>

        <h2>Atualização do Pokemon</h2>

        <form action="/update/<%= pokemon.id %>" method="POST">
          <label for="nome">Nome:</label>
          <input type="text" id="nome" name="nome" value="<%= pokemon.nome%>" />

          <label for="descricao">Descrição:</label>
          <input
            type="text"
            name="descricao"
            id="descricao"
            value="<%= pokemon.descricao%>"
          />

          <label for="tipo">Tipo:</label>
          <input type="text" name="tipo" id="tipo" value="<%= pokemon.tipo%>" />

          <label for="imagem">Link da Imagem:</label>
          <input
            type="text"
            name="imagem"
            id="imagem"
            value="<%= pokemon.imagem%>"
          />

          <button id="btnAtualizar" type="submit">Atualizar</button>
        </form>
        <% } %>
      </section>

      <section id="cards">
        <h3>Lista de Pokemons</h3>

        <% pokedex.forEach((pokemon) => { %>
        <div class="card">
          <img src="<%= pokemon.imagem %>" alt="" />
          <h2><%= pokemon.nome %></h2>
          <p class="descricao"><%= pokemon.descricao %></p>
          <p>Type: <%= pokemon.tipo %></p>
          <a href="/detalhes/<%= pokemon.id %>">Editar</a>
        </div>
        <% }) %>
      </section>
    </main>
  </body>
</html>
